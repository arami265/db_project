
<h3>Your Orders</h3>

{{#if orders}}
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Service</th>
      <th scope="col">Company</th>
      <th scope="col">Cost</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
      {{#each orders}}
        <div class="service">
            <tr>
                <td>{{service.name}}</td>
                <td>{{company.name}}</td>
                <td>{{service.cost}}</td>
                <td>
                    <a class="btn btn-primary" href="/orders/{{orderId}}" role="button">See details</a>
                </td>
            </tr>
        </div>
      {{/each}}
   </tbody>
</table>

{{else}}
<p>You haven't placed an order!</p>
{{/if}}